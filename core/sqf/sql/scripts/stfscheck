#this is to check the health of STFS

#parse the ms.env

stfspath=`dtmci showenv STFS_HDD_LOCATION`
IFS=: declare -a DIRS=($stfspath) 
for ELEM in "${DIRS[@]}"
do
  touch $ELEM/test1
  if [ $? -ne 0 ]; then
    return 1
  fi
  rm $ELEM/test1
done
